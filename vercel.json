
{
    "buildCommand": "cd react && npm install && npm run build",
    "outputDirectory": "react/dist",
    "builds": [
      {
        "src": "react/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "react/dist" }
      },
      {
        "src": "server/main.py",
        "use": "@vercel/python"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server/main.py"
      },
      {
        "src": "/(.*)",
        "dest": "react/dist/$1"
      }
    ]
  }
  